<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/actvity_vertical_margin"
    android:layout_marginLeft="@dimen/actvity_horizontal_margin"
    android:layout_marginRight="@dimen/actvity_horizontal_margin"
    android:layout_marginTop="@dimen/actvity_vertical_margin"
    android:gravity="center">

    <!--Membuat Tampilan Logo-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_hitam"
        android:layout_margin="20dp"/>

    <!--Membuat Linear Layout-->
    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!--Image View Go Mart-->
        <ImageButton
            android:id="@+id/btn_gomart"
            android:scaleType="centerInside"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/menu_gomart"
            android:background="@android:color/transparent"/>

        <!--Image Button Go Ride-->
        <ImageButton
            android:id="@+id/btn_goride"
            android:scaleType="centerInside"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/menu_goride"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!--Image View Go Food-->
        <ImageButton
            android:id="@+id/btn_gofood"
            android:scaleType="centerInside"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/menu_gofood"
            android:background="@android:color/transparent"/>

        <!--Image Button Go Send-->
        <ImageButton
            android:id="@+id/btngosend"
            android:scaleType="centerInside"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/menu_gosend"
            android:background="@android:color/transparent"/>

    </LinearLayout>


</RelativeLayout>